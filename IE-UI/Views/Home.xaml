<Page x:Class="IE_UI.Views.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IE_UI.Views"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="900"
      Title="Home">

    <ScrollViewer VerticalScrollBarVisibility="Hidden">
        <Grid Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="20">
                <Button x:Name="ExtractButton" BorderThickness="4"
                    BorderBrush="Black"
                    Background="Transparent"
                    Margin="4, 20, 4, 20"
                    Width="200" Click="ExtractButton_Click">
                    <StackPanel Orientation="Vertical"
                            Margin="20">
                        <Label Content="&#xE7E6;"
                           FontFamily="Segoe MDL2 Assets"
                           FontSize="72"
                           Padding="0, 40, 0, 40"/>
                        <TextBlock Text="extractor"
                               Foreground="Black"
                               FontSize="20"
                               HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button x:Name="ViewButton" BorderThickness="4"
                    BorderBrush="Black"
                    Background="Transparent"
                    Margin="4, 20, 4, 20"
                    Width="200" Click="ViewButton_Click">
                    <StackPanel Orientation="Vertical"
                            Margin="20">
                        <Label Content="&#xE8E5;"
                           FontFamily="Segoe MDL2 Assets"
                           FontSize="72"
                           Padding="0, 40, 0, 40"/>
                        <TextBlock Text="viewer"
                               Foreground="Black"
                               FontSize="20"
                               HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
            <StackPanel Grid.Row="1">
                <TextBlock Text="recent files"
                       FontSize="20"
                       Foreground="Black"
                       Margin="40, 20, 40, 10"/>
                <ListView Name="RecentFilesListView"
                          BorderBrush="Transparent"
                          Margin="40, 0, 40, 20" MouseDoubleClick="RecentFilesListView_MouseDoubleClick">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0, 0, 4, 0"
                                        Width="250"
                                        Orientation="Horizontal">
                                <!--Icon-->
                                <TextBlock Text="{Binding OperationType}"
                                           VerticalAlignment="Center"
                                           FontFamily="Segoe MDL2 Assets"
                                           FontSize="24"
                                           Margin="8, 0, 0, 0"/>
                                <StackPanel>
                                    <!--File Name-->
                                    <TextBlock Text="{Binding Name}"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"
                                       Margin="8, 8, 8, 0"/>
                                    <!--File Path-->
                                    <TextBlock Text="{Binding SourcePath}"
                                       FontSize="15"
                                       VerticalAlignment="Center"
                                       Margin="8, 0, 8, 8"/>
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Width="{Binding (FrameworkElement.ActualWidth), 
            RelativeSource={RelativeSource AncestorType=ScrollContentPresenter}}"
            ItemWidth="{Binding (ListView.View).ItemWidth, 
            RelativeSource={RelativeSource AncestorType=ListView}}"
            MinWidth="{Binding ItemWidth, RelativeSource={RelativeSource Self}}"
            ItemHeight="{Binding (ListView.View).ItemHeight, 
            RelativeSource={RelativeSource AncestorType=ListView}}" />
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                </ListView>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
